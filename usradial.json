{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple radial chart with embedded data.",
  "title": {"text":"United States' medal distribution",
  "fontSize":15},
  "height": 350,
  "width": 500,
  "background": null,
  "data": {
    "url": "https://raw.githubusercontent.com/manojlah/Test/main/usdat.csv"
  },
  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 40, "stroke": "white"},
      "params": [
        {"name": "select", "select": {"type": "point", "on": "mouseover"}}
      ]
    },
    {
      "mark": {
        "type": "text",
        "radiusOffset": 15,
        "thetaOffset": 5.2,
        "xOffset": 6,
        "yOffset": 5
      },
      "transform": [{"filter": "datum.Sport == 'Shooting'"}],
      "encoding": {"text": {"field": "Count", "type": "quantitative"}}
    },
    {
      "mark": {
        "type": "text",
        "radiusOffset": 35,
        "thetaOffset": 5.2,
        "xOffset": 6,
        "yOffset": 5,
        "fontWeight": "bold"
      },
      "transform": [{"filter": "datum.Sport == 'Shooting'"}],
      "encoding": {"text": {"field": "Sport"}}
    },
    {
      "mark": {
        "type": "text",
        "radiusOffset": 15,
        "thetaOffset": 10.3,
        "xOffset": 11,
        "yOffset": 5
      },
      "transform": [{"filter": "datum.Sport == 'Fencing'"}],
      "encoding": {"text": {"field": "Count", "type": "quantitative"}}
    },
    {
      "mark": {
        "type": "text",
        "radiusOffset": 35,
        "thetaOffset": 10.3,
        "xOffset": 6,
        "yOffset": 5,
        "fontWeight": "bold"
      },
      "transform": [{"filter": "datum.Sport == 'Fencing'"}],
      "encoding": {"text": {"field": "Sport"}}
    },
    {
      "mark": {
        "type": "text",
        "radiusOffset": 15,
        "thetaOffset": 10.6,
        "xOffset": 4.5,
        "yOffset": 5
      },
      "transform": [{"filter": "datum.Sport == 'Gymnastics'"}],
      "encoding": {"text": {"field": "Count", "type": "quantitative"}}
    },
    {
      "mark": {
        "type": "text",
        "radiusOffset": 35,
        "thetaOffset": 10.75,
        "xOffset": 2.5,
        "yOffset": 5,
        "fontWeight": "bold"
      },
      "transform": [{"filter": "datum.Sport == 'Gymnastics'"}],
      "encoding": {"text": {"field": "Sport"}}
    },
    {
      "mark": {
        "type": "text",
        "radiusOffset": 15,
        "thetaOffset": -2.79,
        "xOffset": 12.5,
        "yOffset": 3
      },
      "transform": [{"filter": "datum.Sport == 'Cycling'"}],
      "encoding": {"text": {"field": "Count", "type": "quantitative"}}
    },
    {
      "mark": {
        "type": "text",
        "radiusOffset": 35,
        "thetaOffset": -2.79,
        "xOffset": 2.5,
        "yOffset": -2,
        "fontWeight": "bold"
      },
      "transform": [{"filter": "datum.Sport == 'Cycling'"}],
      "encoding": {"text": {"field": "Sport"}}
    },
    {
      "mark": {"type": "text", "radiusOffset": 10},
      "transform": [{"filter": "datum.Count > 11"}],
      "encoding": {"text": {"field": "Count", "type": "quantitative"}}
    },
    {
      "mark": {"type": "text", "radiusOffset": 35, "fontWeight": "bold"},
      "transform": [{"filter": "datum.Count > 11"}],
      "encoding": {"text": {"field": "Sport"}}
    },
    {
      "mark": {
        "type": "image",
        "url": "https://raw.githubusercontent.com/manojlah/Test/main/usflag.png",
        "height": 70
      },
      "encoding": {"x": {"value": 500}, "y": {"value": 175}}
    }
  ],
  "encoding": {
    "theta": {"field": "Count", "type": "quantitative", "stack": true},
    "radius": {
      "field": "Count",
      "scale": {"type": "symlog", "zero": true, "rangeMin": 20},
      "sort": "ascending"
    },
    "color": {
      "field": "Sport",
      "type": "nominal",
      "legend": null,
      "scale": {
        "domain": [
          "Aquatics",
          "Athletics",
          "Baseball",
          "Basketball",
          "Boxing",
          "Cycling",
          "Equistrian",
          "Fencing",
          "Football",
          "Gymnastics",
          "Judo",
          "Rowing",
          "Sailing",
          "Shooting",
          "Softball",
          "Taekwondo",
          "Tennis",
          "Volleyball",
          "Wrestling"
        ],
        "range": [
          "#1a75ff",
          "#00cc00",
          "grey",
          "grey",
          "grey",
          "#e6e600",
          "grey",
          "#ff6699",
          "grey",
          "#660000",
          "grey",
          "grey",
          "grey",
          "#ffa64d",
          "grey",
          "grey",
          "grey",
          "grey",
          "grey"
        ]
      }
    },
    "tooltip": [
      {"field": "Sport"},
      {"field": "Count", "title": "No. of Medals"}
    ],
    "fillOpacity": {"condition": {"param": "select", "value": 1}, "value": 0.3}
  },
  "config": {}
}
